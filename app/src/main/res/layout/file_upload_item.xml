<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/upload_img"
            android:layout_width="40dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_image"
            />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cloud_upload_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="15"
                android:paddingTop="14dp"
                android:singleLine="true"
                android:text="TITLE"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cloud_upload_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="UPLOAD STATUS"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/cloud_upload_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="FILE SIZE"
                android:textSize="10dp"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/cloud_upload_completed"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"

            android:src="@drawable/ic_cloud_queue_black"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>